<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/rl_file_item"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_above="@+id/rl_gallery_footer"
android:layout_below="@+id/gallery_title"
android:orientation="vertical">

    <View
        android:id="@+id/view_file_list_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:background="#000"
        android:layout_above="@+id/rv_file_list"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_file_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:visibility="invisible"
        android:padding="4dp"
        android:layout_alignParentBottom="true">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>