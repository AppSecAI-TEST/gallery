<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gallery_title"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/iv_title_left_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_32"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/view_title_line"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:background="#cb1a1a1a"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_title_left_point"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="所有图片"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/view_title_line"/>

    <Button
        android:id="@+id/bt_title_send"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="发送"
        android:textColor="#a1a1a1"
        android:textSize="15sp"
        android:background="#094909"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>