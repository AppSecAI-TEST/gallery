<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/rl_preview_footer"
android:layout_width="match_parent"
android:layout_height="?attr/actionBarSize"
android:background="#e4292b29"
android:layout_alignParentBottom="true"
android:layout_alignParentStart="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b2bababa"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_footer_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:textColor="#fff"
        android:textSize="18sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"/>


    <ImageView
        android:id="@+id/iv_footer_origin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/footer_circle_16"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingRight="35dp"/>

    <TextView
        android:id="@+id/tv_footer_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原图"
        android:textColor="#fff"
        android:textSize="18sp"
        android:paddingLeft="35dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/iv_footer_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select_alpha_16"
        android:layout_toLeftOf="@+id/tv_footer_select"
        android:layout_centerVertical="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/tv_footer_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>

</RelativeLayout>